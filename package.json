{
  "name": "svelte-app",
  "version": "0.2.0",
  "private": true,
  "description": "A short example of working Svelte+Prisma serverless app",
  "keywords": [
    "example",
    "short",
    "svelte",
    "prisma",
    "serverless",
    "vercel"
  ],
  "license": "MIT",
  "author": {
    "name": "Karkael",
    "email": "karkael@gmail.com",
    "url": "https://github.com/karkael64"
  },
  "scripts": {
    "build": "yarn @common build && yarn @prisma build && yarn @data build && yarn @web build",
    "postbuild": "yarn pretty",
    "serverless": "concurrently -n api,web -c bgCyan,bgMagenta \"yarn api\" \"yarn web\"",
    "lint": "eslint **/*.ts",
    "pretty": "prettier --write .",
    "@common": "yarn workspace @test/common",
    "@data": "yarn workspace @test/data",
    "@prisma": "yarn workspace @test/prisma",
    "@web": "yarn workspace @test/web",
    "api": "ts-node ./api/index.ts",
    "web": "yarn @web dev"
  },
  "dependencies": {
    "@tsconfig/svelte": "^1.0.10",
    "bcrypt": "^5.0.1",
    "concurrently": "^6.1.0",
    "express-graphql": "^0.12.0",
    "graphql-tag": "^2.11.0",
    "graphql-tools": "^7.0.4",
    "pg": "^8.6.0",
    "svelte-apollo": "^0.4.0",
    "types": "https://github.com/karkael64/types"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "eslint": "^7.26.0",
    "typescript": "^4.2.4",
    "vercel": "^22.0.0"
  },
  "engines": {
    "node": ">=12",
    "yarn": ">=1.12"
  },
  "repository": "github:karkael64/svelte-test",
  "bugs": "https://github.com/karkael64/svelte-test/issues",
  "workspaces": [
    "packages/common",
    "packages/data",
    "packages/prisma",
    "packages/web"
  ],
  "npmClient": "yarn"
}
