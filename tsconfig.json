{
  "compilerOptions": {
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "module": "CommonJS",
    "target": "es6",
    "baseUrl": ".",
    "lib": ["es2016", "esnext.asynciterable"],
    "paths": {
      "@test/common": ["packages/common/src/index.ts"],
      "@test/ui": ["packages/ui/src/main.ts"],
      "@test/data": ["packages/data/src/index.ts"],
      "@test/prisma": ["packages/prisma/src/index.ts"],
      "@test/web": ["packages/web/src/index.ts"]
    }
  },
  "include": [
    "api",
    "packages/common",
    "packages/data",
    "packages/prisma",
    "packages/ui",
    "packages/web"
  ],
  "exclude": [
    "node_modules",
    "packages/*/node_modules",
    "dist",
    "packages/*/dist",
    "packages/prisma/client"
  ]
}
